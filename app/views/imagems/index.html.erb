<p id="notice"><%= notice %></p>

<h1>Imagens</h1>

<table class='table'>
  
  <thead>
    <tr>
      <th>Nome</th>
      <!--<th>Url</th>-->
      <th>Data upload</th>
      <th>Tamanho</th>
      <th>Galeria</th>
      <th>Tags</th>
      <th>Público</th>
      <!--<th>Extensão</th>-->
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imagems.each do |imagem| %>
      <tr>
        <td><%= imagem.nome %></td>
        <!--<td>< %= imagem.url %></td>-->
        <td><%= imagem.created_at %></td>
        <td><%= imagem.tamanho.round(2) %> MB</td>
        <td><%= @hgaleria[imagem.id_galeria] %></td>
        <td><%= @htags[imagem.id] %></td>
        <td><%= imagem.publico %></td>
        <!--<td>< %= imagem.extensao %></td>-->
        <td><%= image_tag imagem.url, size: "300x200"  %></td>
        <!--<td> #link_to 'Show', imagem </td>-->
        <!--<td> #link_to 'Edit', edit_imagem_path(imagem) </td>-->
        <!--<td> #link_to 'Destroy', imagem, method: :delete, data: { confirm: 'Are you sure?' } </td>-->
      </tr>
    <% end %>
  </tbody>
</table>

